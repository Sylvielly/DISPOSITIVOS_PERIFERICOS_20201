//ATIVIDADE 01: ALTERAR P90 PARA CONFIGURAR DISPLAY LCD DE ACORDO COM VIDEO F1 (CLASSROOM) - LACO FOR


//INICIO CABECALHO PADRAO
#include <18F4550.h>
#fuses HS, CPUDIV1,PLL5,USBDIV
#use delay(clock=20000000)

//HABILITACAO DA BIBLIOTECA DO LCD
#use standard_io(B)              //COMENTAR LINHA CASO A BIBLIOTECA DO LCD SEJA DIFERENTE
#define use_portB_lcd TRUE       //COMENTAR LINHA CASO A BIBLIOTECA DO LCD SEJA DIFERENTE
#define LCD_TYPE 2
#include <LCD.c>

//DECLARACAO DE VARIAVEIS
//CONTADORES 'contador1' e 'contador2'
unsigned int32 contador1 = 0;             //VARIAVEL DO TIPO 'INT32' NÃO SINALIZADA
unsigned int32 contador2 = 0;             //VARIAVEL DO TIPO 'INT32' NÃO SINALIZADA
unsigned int32 avanco1 = 0;               //VARIAVEL CRIADA PARA AVANCO DE COLUNA
unsigned int32 avanco2 = 0;               //VARIAVEL CRIADA PARA AVANCO DE COLUNA

//INICIO DE PROGRAMA

void main(){
         lcd_init();          //INICIALIZACAO DO LCD
               while(true){
                  
                    if((contador1 = 0)||(contador1 <= 16)){
                           lcd_gotoxy(1,1);
                           printf(lcd_putc,"\f");
                           lcd_gotoxy((avanco1+=1),1);       //FAZ O AVANCO DE POSICAO DE CADA COLUNA PARA QUE O NOME SE MOVIMENTE NO LCD                            
                           printf(lcd_putc,"SYL IFCE",);         //NOME A SER MOVIMENTADO NO LCD
                           delay_ms(100);
                           contador1+=1;                    //INCREMENTA O CONTADOR
                    }
                    
                    if((contador2 = 0)||(contador2 <= 16)){
                           lcd_gotoxy(1,2);
                           printf(lcd_putc,"\f",);
                           lcd_gotoxy((avanco2+=1),2);     //FAZ O AVANCO DE POSICAO DE CADA COLUNA PARA QUE O NOME SE MOVIMENTE NO LCD
                           printf(lcd_putc,"SYL IFCE",);       //NOME A SER MOVIMENTADO NO LCD
                           delay_ms(100);
                           printf(lcd_putc,"\f",);
                           contador2+=1;                   //INCREMENTA O CONTADOR
                     
                    }
                     
               }
}
//FIM DE PROGRAMA           
