//ATIVIDADE 01: ALTERAR P90 PARA CONFIGURAR DISPLAY LCD DE ACORDO COM VIDEO F1 (CLASSROOM) - LACO FOR


//INICIO CABECALHO PADRAO
#include <18F4550.h>
#fuses HS, CPUDIV1,PLL5,USBDIV
#use delay(clock=20000000)

//HABILITACAO DA BIBLIOTECA DO LCD
#use standard_io(B)              //COMENTAR LINHA CASO A BIBLIOTECA DO LCD SEJA DIFERENTE
#define use_portB_lcd TRUE       //COMENTAR LINHA CASO A BIBLIOTECA DO LCD SEJA DIFERENTE
#define LCD_TYPE 2
#include <LCD.c>

//DECLARACAO DE VARIAVEIS

unsigned int32 n = 0;              //VARIAVEL DO TIPO 'INT32' NÃO SINALIZADA
unsigned int32 n2 = 0;
unsigned int32 number = 0;
unsigned int32 number2 = 0;

//INICIO DE PROGRAMA

void main(){
         lcd_init();          //INICIALIZACAO DO LCD
               while(true){
                  
                    if((n = 0)||(n<=16)){
                           lcd_gotoxy(1,1);
                           printf(lcd_putc,"\f");
                           lcd_gotoxy((number+=1),1);                              
                           printf(lcd_putc,"IFCE",);
                           delay_ms(500);
                    }
                    
                    if((n2 = 0)||(n2<=16)){
                           lcd_gotoxy(1,2);
                           printf(lcd_putc,"\f",);
                           lcd_gotoxy((number2+=1),2);
                           printf(lcd_putc,"IFCE",);
                           delay_ms(500);
                           printf(lcd_putc,"\f",);
                    }
                     
                     n+=1;
                     n2+=1;
                     
                     //if((n>16)||(n2>16)){
                       // n = 0;
                       // n2 = 0;
                     //}
                           
               }
}
//FIM DE PROGRAMA           
